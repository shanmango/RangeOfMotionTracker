<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"></RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stick"
        android:src="@drawable/stick"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:id="@+id/pos_three"
        android:src="@drawable/pos_three"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/stick"
        android:layout_toEndOf="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rsz_pos_two"
        android:src="@drawable/rsz_pos_two"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/stick"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/upper_body"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/stick"
        android:layout_marginTop="29dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></RelativeLayout>

</RelativeLayout>
